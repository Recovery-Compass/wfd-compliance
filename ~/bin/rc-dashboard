#!/bin/bash
# Recovery Compass Dashboard Launcher
# Strategic Intelligence v5.1 compliant
# Updated: 31 Jul 2025

# Colors for output
GREEN='\033[0;32m'
BLUE='\033[0;34m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m' # No Color

# Dashboard project directory
DASHBOARD_DIR="$HOME/Projects/recovery-compass-journeys"
DASHBOARD_URL="http://localhost:3000/pages/RecoveryCompassDashboard"
HEALTH_CHECK_URL="http://localhost:3000"

# Display Recovery Compass branding
echo -e "${BLUE}🧭 Recovery Compass Dashboard Launcher${NC}"
echo -e "${BLUE}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"

# Check if project directory exists
if [ ! -d "$DASHBOARD_DIR" ]; then
    echo -e "${RED}❌ Dashboard project not found at: $DASHBOARD_DIR${NC}"
    echo -e "${YELLOW}Please ensure recovery-compass-journeys is installed at the correct location.${NC}"
    exit 1
fi

# Navigate to project directory
cd "$DASHBOARD_DIR" || exit 1

# Check if node_modules exists
if [ ! -d "node_modules" ]; then
    echo -e "${YELLOW}📦 Installing dependencies...${NC}"
    npm install
fi

# Check if React dev server is already running
if curl -s "$HEALTH_CHECK_URL" > /dev/null 2>&1; then
    echo -e "${GREEN}✅ Dashboard server already running${NC}"
else
    echo -e "${BLUE}🚀 Starting Recovery Compass Dashboard...${NC}"
    # Start React development server in background
    npm start > /dev/null 2>&1 &
    SERVER_PID=$!

    # Wait for server to start (max 30 seconds)
    echo -n "Waiting for server to start"
    COUNTER=0
    while ! curl -s "$HEALTH_CHECK_URL" > /dev/null 2>&1; do
        echo -n "."
        sleep 1
        COUNTER=$((COUNTER + 1))
        if [ $COUNTER -gt 30 ]; then
            echo -e "\n${RED}❌ Server failed to start within 30 seconds${NC}"
            kill $SERVER_PID 2>/dev/null
            exit 1
        fi
    done
    echo -e "\n${GREEN}✅ Dashboard server started successfully${NC}"
fi

# Launch browser
echo -e "${BLUE}🌐 Opening Recovery Compass Dashboard...${NC}"

# Try Arc browser first, fallback to default browser
if open -a "Arc" "$DASHBOARD_URL" 2>/dev/null; then
    echo -e "${GREEN}✅ Launched in Arc browser${NC}"
else
    echo -e "${YELLOW}Arc browser not found, using default browser...${NC}"
    open "$DASHBOARD_URL"
    echo -e "${GREEN}✅ Launched in default browser${NC}"
fi

echo -e "${BLUE}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
echo -e "${GREEN}✨ Recovery Compass Dashboard is ready!${NC}"
echo -e "${BLUE}   Dashboard URL: $DASHBOARD_URL${NC}"
echo -e "${BLUE}   Project: $DASHBOARD_DIR${NC}"
echo -e "${BLUE}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"

# Keep script running if in terminal mode
if [ -t 0 ]; then
    echo -e "\n${YELLOW}Press Ctrl+C to stop the dashboard server${NC}"
    # Wait for the React server process
    wait $SERVER_PID
fi
